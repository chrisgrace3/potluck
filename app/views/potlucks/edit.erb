<h2><%= @potluck.name %></h2>

<% if @message %>
<p><%= @message %></p>
<% end %>

<div class="potluck-form">
  <form action='/potlucks/<%= @potluck.id %>' method='post' >
    <input name="_method" type="hidden" value="patch">
    <%= erb :'potlucks/_form_fields', layout: false %>
    <div ="submit-field">
      <input type="submit" value="Update Potluck">
    </div>
  </form>
</div>

